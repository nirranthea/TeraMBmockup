<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyAccountActivity">

        <!--HEADER IMAGE-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/teradata1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#96000000"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="MY ACCOUNT"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </FrameLayout>

        <!--TABUNGAN DAN GIRO-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:paddingLeft="12dp"
            android:text="TABUNGAN DAN GIRO" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tv_nama_cif1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NAMA LENGKAP NASABAH"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_no_rekening1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_nama_cif1"
                    android:text="0010301123456" />

                <TextView
                    android:id="@+id/tv_saldo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_no_rekening1"
                    android:layout_alignParentEnd="true"
                    android:text="Rp 3.000.000,-"
                    android:textStyle="bold" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tv_nama_cif2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NAMA LENGKAP NASABAH"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_no_rekening2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_nama_cif2"
                    android:text="0010001123456" />

                <TextView
                    android:id="@+id/tv_saldo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_no_rekening2"
                    android:layout_alignParentEnd="true"
                    android:text="Rp 5.000.000,-"
                    android:textStyle="bold" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="4dp"
            android:paddingLeft="12dp"
            android:text="KARTU KREDIT" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tv_nama_cif3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NAMA LENGKAP NASABAH"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_no_rekening3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_nama_cif3"
                    android:text="0010501123456" />

                <TextView
                    android:id="@+id/tv_saldo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_no_rekening3"
                    android:layout_alignParentEnd="true"
                    android:text="Rp 2.000.000,-"
                    android:textStyle="bold" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

</LinearLayout>